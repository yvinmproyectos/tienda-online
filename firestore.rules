rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow unauthenticated users to LIST users (needed for finding email by username)
    // We restrict this by requiring that they can only query, not get specific IDs blindly effectively
    // But simplistic rule: allow list if true.
    match /users/{userId} {
      allow list: if true;
      allow read, write: if request.auth != null;
    }

    // Default rule: everything else requires auth
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
